<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="javainstitute.edu.lk.studentapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Syllabus"
            android:label="@string/title_activity_syllabus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Complaint"
            android:label="@string/title_activity_complaint"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".History"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Faq"
            android:label="@string/title_activity_faq"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowSyllabus"
            android:label="@string/title_activity_show_syllabus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Contact"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Marks"
            android:label="@string/title_activity_marks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewMarks"
            android:label="@string/title_activity_view_marks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LetterFormat"
            android:label="@string/title_activity_letter_format"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_activity_events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Qulifications"
            android:label="@string/title_activity_qulifications"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
